<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/TKO_dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название продукта"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF"/>

        <EditText
            android:id="@+id/etKcal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Калории (ккал)"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF"/>

        <EditText
            android:id="@+id/etUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Единица измерения (например, 'шт')"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF"/>

        <EditText
            android:id="@+id/etGrams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Граммы"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF"/>

        <EditText
            android:id="@+id/etPortion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Порция"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF"/>

        <EditText
            android:id="@+id/etFats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Жиры (г)"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF"/>

        <EditText
            android:id="@+id/etCarbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Углеводы (г)"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF"/>

        <EditText
            android:id="@+id/etProteins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Белки (г)"
            android:inputType="numberDecimal"
            android:textColor="@color/white"
            android:textColorHint="#B3FFFFFF"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Добавить продукт"/>

    </LinearLayout>
</ScrollView>