<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TKO_dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:baselineAligned="false">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Питание"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"/>

        <RadioGroup
            android:id="@+id/daysRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

                <RadioButton
                android:id="@+id/monday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пн"
                    android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/tuesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вт"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/wednesday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ср"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/thursday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Чт"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/friday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пт"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/saturday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Сб"
                android:textColor="@color/white"/>
            <RadioButton
                android:id="@+id/sunday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вс"
                android:textColor="@color/white"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvFats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Жиры"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvCarbohydrates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Углев"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvpProtein"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Белки"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvRSK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="РСК"
                android:gravity="center"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvKcal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ккал"
                android:gravity="center"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvFatsValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvCarbohydratesValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvProteinValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvRSKValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvKcalValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>

        <include layout="@layout/food_section" android:id="@+id/breakfastSection"/>
        <include layout="@layout/food_section" android:id="@+id/lunchSection"/>
        <include layout="@layout/food_section" android:id="@+id/dinnerSection"/>
        <include layout="@layout/food_section" android:id="@+id/snackSection"/>

    </LinearLayout>
</ScrollView>