<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/TKO_dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Параметры упражнения"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="28dp"
            android:textColor="@color/white"
            android:gravity="center" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Подходы"
            app:boxBackgroundColor="@color/TKO_gray"
            android:textColorHint="#FFFFFF"
            app:boxCornerRadiusTopStart="18sp"
            app:boxCornerRadiusTopEnd="18sp"
            app:boxCornerRadiusBottomStart="18sp"
            app:boxCornerRadiusBottomEnd="18sp"
            app:boxStrokeColor="#D6FFA4"
            app:hintTextColor="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                tools:text="3"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Повторения"
            app:boxBackgroundColor="@color/TKO_gray"
            android:textColorHint="#FFFFFF"
            app:boxCornerRadiusTopStart="18sp"
            app:boxCornerRadiusTopEnd="18sp"
            app:boxCornerRadiusBottomStart="18sp"
            app:boxCornerRadiusBottomEnd="18sp"
            app:boxStrokeColor="#D6FFA4"
            app:hintTextColor="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                tools:text="12"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Отдых между подходами (сек)"
            app:boxBackgroundColor="@color/TKO_gray"
            android:textColorHint="#FFFFFF"
            app:boxCornerRadiusTopStart="18sp"
            app:boxCornerRadiusTopEnd="18sp"
            app:boxCornerRadiusBottomStart="18sp"
            app:boxCornerRadiusBottomEnd="18sp"
            app:boxStrokeColor="#D6FFA4"
            app:hintTextColor="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                tools:text="60"
                android:textColor="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveParams"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:text="Сохранить"
            android:textColor="#D6FFA4"
            android:textSize="22sp"
            android:backgroundTint="#353535"
            app:cornerRadius="18sp" />

    </LinearLayout>
</ScrollView>